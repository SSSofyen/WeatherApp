<!DOCTYPE html>
<html>

<head>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
  <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.3.1/css/all.css" integrity="sha384-mzrmE5qonljUremFsqc01SB46JvROS7bZs3IO2EmfFsd15uHvIt+Y8vEf7N7fWAU" crossorigin="anonymous">
  <link rel='stylesheet' href='/stylesheets/style.css' />
</head>

<body>

  <div class="container">
    <div class="row">

      <div class="offset-lg-6 col-12">
        <form method="post" action="/add-city" class="form-inline">
          <div class="form-group mb-2 mx-sm-3">
            <span>Ville</span>
            <input type="text" class="form-control" name="city" value="" placeholder="Paris, Lyon ..">
          </div>
          <button class="btn btn-warning mb-2">Enregistrer</button>
        </form>
      </div>


      <div id="map" class="col-12 col-lg-6"></div>

      <div class="col-12 col-lg-6">
        <ul class="list-group">
          <%
          var color;
      for(var i =0; i<cityList.length; i++){

        if(cityList[i].min <= 15 ){
            color="froid"
        }else if (cityList[i].max >= 20 ){
            color="chaud"
        }else{
          color=""
        }
        %>
          <li data-lat="<%=cityList[i].lat%>" data-lon="<%=cityList[i].lon%>" class="<%=color%> list-group-item">
            <div class="row parent">
              <span class="col-1">
                <%=cityList[i].name%></span>
              <span  class="offset-1 col-1"><img src="<%=cityList[i].picto1%>" alt=""></span>
              <span class="col-3">
                <%=cityList[i].commentaires%></span>
              <span class="col-1 badge badge-pill badge-secondary">
                <%=cityList[i].min%>°</span>
              <span class="col-1 badge badge-pill badge-warning">
                <%=cityList[i].max%>°</span>
              <div class="offset-1 col-1">
                <a href="/delete-city?position=<%=cityList[i]._id%>"><i class="far fa-times-circle"></i></a>
              </div>
            </div>
          </li>
          <%
              }
                %>
        </ul>
      </div>


    </div>
  </div>
<script src="javascripts/script.js"></script>
<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAe01yXm_aQlq9XlIA_cEv_BCEiWTtnTPE&callback=initMap"
    async defer></script>
</body>

</html>
